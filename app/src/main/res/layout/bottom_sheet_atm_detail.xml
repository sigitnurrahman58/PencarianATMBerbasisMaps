<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFE2EB"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_atm_photo"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_atm_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ATM BNI"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/iv_atm_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_atm_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Jl. Example No. 123"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_atm_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.1 Km dari lokasi Anda"
                android:textColor="#666666"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_atm_address"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btn_direction"
                android:layout_width="139dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#932A4D"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Petunjuk Arah"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_distance"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btn_call"
                android:layout_width="151dp"
                android:layout_height="43dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#006BB4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Hubungi"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@id/btn_direction"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_direction"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>